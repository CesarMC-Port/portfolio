<meta name="image" property="og:image" content={imageFix || ''} />
<meta property="og:url" content={canonical || `https://cesarmc-port.github.io/portfolio`} />
<meta property="og:type" content="website" />

<meta property="twitter:title" content={ title || 'Full-Stack Software Developer Portfolio | Web, Cloud & AI'} />
