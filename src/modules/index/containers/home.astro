---
import AnimatedBackground from '../components/home/AnimatedBackground.astro';
import StatCard from '../components/home/StatCard.astro';
import SplineBot from '../components/home/SplineBot.vue';
import StackCesar from '../components/home/stackCesar.astro';
import { stats } from '../const';
---

<section class="relative z-10 px-4 pb-6 md:px-8 md:pb-14 lg:px-20 py-12 md:py-20 overflow-hidden min-h-[860px] md:min-h-[820px]" style="height:calc(100vh - 60px); background: transparent;">
    <AnimatedBackground client:load/>
    <SplineBot client:load/>
    <div class="hidden md:block absolute z-10 container mx-auto md:pt-6 px-6 md:py-20 bottom-[40px] md:bottom-0 left-0">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
            {stats.map((stat, index) => (
                <StatCard
                    key={index}
                    value={stat.value}
                    label={stat.label}
                    index={index}
                />
            ))}
        </div>
    </div>
    <StackCesar variant="movil"/>
</section>