---
import SkillCard from '../components/skills/SkillCard.astro';
import { skills } from '../const';
---


<section class="relative w-full border-b border-t border-gray-800">
    <div class="bg-[#0d1117] absolute top-0 left-0 z-20 rounded-br-md border-r border-b border-gray-800 px-4 py-2 font-mono text-xs tracking-wider uppercase">
        TECH STACK
    </div>

    <div class="container mx-auto px-6 py-20 pt-24">
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {skills.map(({title,skills,code}) => (
                <SkillCard
                    icon={code}
                    title={title}
                    skills={skills}
                />
            ))}
        </div>
    </div>
</section>