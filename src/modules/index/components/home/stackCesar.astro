---
const { variant } = Astro.props;
import SplineStack from './SplineStack.vue';
const cesarMember = '../assets/cesar-member2.webp';
const bul = variant === 'movil';
---

<div class={`relative h-auto flex items-center justify-center border-l border-gray-800 md:w-1/2 ${bul ? 'sm:hidden' : 'lg:flex '} flex-1`}>
    <SplineStack client:load/>
    <div class="absolute inset-0 size-full">
        <div class="before:bg-gray-800 after:bg-gray-800 relative h-full w-full before:absolute before:top-1/2 before:left-0 before:h-0.5 before:w-full after:absolute after:top-0 after:left-1/2 after:h-full after:w-0.5"></div>
    </div>
    <div class="relative py-4" style={{transform: 'rotate(-2deg) translateY(-30px)'}}>
        <div class="sticky top-8 h-auto w-80">
        <div class="absolute -inset-2 bg-white/5 rotate-3 blur-sm"></div>
        <div class="absolute -inset-1 bg-white/10 rotate-1"></div>
        <div class="bg-[#0d1117] relative border-2 border-white p-8 shadow-2xl shadow-white/10">
            <div class="absolute -top-1 -left-1 h-8 w-8 border-t-2 border-l-2 border-white"></div>
            <div class="absolute -top-1 -right-1 h-8 w-8 border-t-2 border-r-2 border-white"></div>
            <div class="absolute -bottom-1 -left-1 h-8 w-8 border-b-2 border-l-2 border-white"></div>
            <div class="absolute -bottom-1 -right-1 h-8 w-8 border-b-2 border-r-2 border-white"></div>

            <div class="text-center">
            <div class="bg-[#0d1117] mb-6 overflow-hidden border-0 p-0 relative group scale-110">
                <div class="absolute inset-0 bg-white/5 opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
                <img src={cesarMember}></img>
            </div>

            <h3 class="text-3xl font-bold mb-2">Cesar Mora</h3>
            <p class="text-white/60 mb-1 font-mono text-sm uppercase tracking-wider">Full-Stack Developer</p>

            <div class="flex items-center justify-center gap-2 my-4">
                <div class="h-px flex-1 bg-white/20"></div>
                <div class="h-2 w-2 rotate-45 border border-white/40"></div>
                <div class="h-px flex-1 bg-white/20"></div>
            </div>

            <div class="flex flex-wrap justify-center gap-2 mb-6">
                <span class="inline-flex items-center justify-center border px-3 py-1.5 text-xs font-medium font-mono border-green-500/40 bg-green-500/10">
                    <div class="mr-1.5 h-2 w-2 animate-pulse rounded-full bg-green-500"></div>
                    AVAILABLE
                </span>
                <span class="inline-flex items-center justify-center border px-3 py-1.5 text-xs font-medium font-mono border-white/20 bg-white/5">
                    6+ YEARS
                </span>
                {bul ? <span class="inline-flex items-center justify-center border px-3 py-1.5 text-xs font-medium font-mono border-white/20 bg-white/5">
                    40+ PROJECTS DELIVERED
                </span>
                <span class="inline-flex items-center justify-center border px-3 py-1.5 text-xs font-medium font-mono border-white/20 bg-white/5">
                    1000+ CONTRIBUTIONS
                </span>
                <span class="inline-flex items-center justify-center border px-3 py-1.5 text-xs font-medium font-mono border-white/20 bg-white/5">
                    40+ TECH SKILLS & LEARNING
                </span> : <div></div>}
            </div>

            <div class="space-y-3 text-left">
                <div class="flex items-center justify-between text-sm">
                    <span class="text-white/60 font-mono text-xs">FRONTEND</span>
                    <div class="flex gap-1">
                        {[...Array(5)].map(() => (
                        <div class="h-1.5 w-6 border border-white/40 bg-white"></div>
                        ))}
                    </div>
                </div>
                <div class="flex items-center justify-between text-sm">
                    <span class="text-white/60 font-mono text-xs">DESIGN</span>
                    <div class="flex gap-1">
                        {[...Array(5)].map(() => (
                        <div class="h-1.5 w-6 border border-white/40 bg-white"></div>
                        ))}
                    </div>
                </div>
                <div class="flex items-center justify-between text-sm">
                    <span class="text-white/60 font-mono text-xs">BACKEND</span>
                    <div class="flex gap-1">
                        {[...Array(4)].map(() => (
                        <div class="h-1.5 w-6 border border-white/40 bg-white"></div>
                        ))}
                        <div class="h-1.5 w-6 border border-white/40"></div>
                    </div>
                </div>
                <div class="flex items-center justify-between text-sm">
                    <span class="text-white/60 font-mono text-xs">DEVOPS</span>
                    <div class="flex gap-1">
                        {[...Array(3)].map(() => (
                        <div class="h-1.5 w-6 border border-white/40 bg-white"></div>
                        ))}
                        <div class="h-1.5 w-6 border border-white/40"></div>
                        <div class="h-1.5 w-6 border border-white/40"></div>
                    </div>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
</div>